@model NotasProfesorM
@{
    ViewData["Title"] = "Listado Materias Inscriptas";
    string nombreCompleto = Model.profesor.PrimerApellido + " " + Model.profesor.SegundoApellido + " " + Model.profesor.Nombre;
}

<h3>@ViewData["Title"]</h3>
<div class="container p-4">
    <div class="form-group">
        <form asp-area="Notas" asp-controller="Notas" asp-action="ListadoMateriasProfesorInscriptas" method="get">
            <div class="row">
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Identificacion</label>
                        <input type="text" placeholder="@Model.profesor.Identificacion" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label>Nombre</label>
                        <input type="text" placeholder="@nombreCompleto" class="form-control" readonly />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12">
                        <label></label>
                        <input type="text" id="filtrar" name="filtrar" placeholder="Buscar Materia" class="form-control" autocomplete="off" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label></label>
                        <input type="submit" value="Buscar" class="btn btn-success">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-4">
                        <label></label>
                        <a class="btn btn-primary" asp-area="Notas" asp-controller="Notas" asp-action="ListadoMateriasProfesorInscriptas">Todos</a>
                    </div>
                </div>
            </div>
        </form><br />
        <div class="row">
            @foreach (var item in Model.lista_MateriasInscriptas)
            {
                <div class="col-xs-6 col-md-2">
                    <div class="card text-center">
                        <div class="card-header ">
                            <a asp-route-id="@item.Codigo_Materia" asp-area="Notas" asp-page="/Materias/DetalleMaterias">
                                <img class='imageUsers' src="~/lib/Image/iconsMaterias.png" />
                            </a>
                        </div>
                        <div class="card-body text-center">
                            <table class="tableCursos">
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="text-center">
                                                <p>Codigo: @Html.DisplayFor(modelItem => item.Codigo_Materia)</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <div class="text-center">
                                                <p>Nombre: @Html.DisplayFor(modelItem => item.Nombre)</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <a asp-route-id="@item.Codigo_Materia" asp-area="Notas" asp-page="/NotasAcademicas/ListadoEstudiantesMateria">
                                                <input type="submit" value="Estudiantes" class="btn btn-success ">
                                            </a>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>