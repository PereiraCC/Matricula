@page
@model DetalleCarrerasModel
@{
    ViewData["Title"] = "Detalle Carreras";
    var name = Model.Input.DataUser.Nombre_Carrera;
}

<div class="container">
    <h3>@ViewData["Title"]</h3><br />
    <div class="row">
        <div class="col-sm ">
            <div class="card text-center" style="width: 21rem;">
                <div class="card-header ">
                    <img class='imageUserDetails' src="~/lib/Image/iconsCarreras.png" />
                </div>
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <td>
                                    <p>Nombre: @name</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <th>
                                    Informacion
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    Codigo de la Carrera
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.Codigo_Carrera</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Nombre de la carrera
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@name</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Descripcion de la carrera
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.Descripcion_Carrera</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <form asp-area="Mantenimiento" asp-page="RegistrarCarreras" method="post">
                                        @{
                                            var dataUser = JsonConvert.SerializeObject(Model.Input.DataUser);
                                        }

                                        <input type="hidden" name="dataCarrera" value="@dataUser" />
                                        <input type="submit" value="Editar" class="btn btn-success ">
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>