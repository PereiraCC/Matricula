@page
@model DetalleHorariosModel
@{
    ViewData["Title"] = "Detalle Horario";
    var day = Model.Input.DataUser.Dia;
}

<div class="container">
    <h3>@ViewData["Title"]</h3><br />
    <div class="row">
        <div class="col-sm ">
            <div class="card text-center" style="width: 21rem;">
                <div class="card-header ">
                    <img class='imageUserDetails' src="~/lib/Image/iconsHorario.png" />
                </div>
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <td>
                                    <p>Día: @day</p>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="col-sm">
            <div class="card">
                <div class="card-body">
                    <table class="tableCursos">
                        <tbody>
                            <tr>
                                <th>
                                    Informacion
                                </th>
                            </tr>
                            <tr>
                                <th>
                                    Codigo del Horario
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.Codigo_Horario</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Día del Horario
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@day</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Hora Inicial del Horario
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.Hora_Inicial</p>
                                </td>
                            </tr>
                            <tr>
                                <th>
                                    Hora Final del Horario
                                </th>
                            </tr>
                            <tr>
                                <td>
                                    <p>@Model.Input.DataUser.Hora_Final</p>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <form asp-area="Mantenimiento" asp-page="RegistrarHorarios" method="post">
                                        @{
                                            var dataUser = JsonConvert.SerializeObject(Model.Input.DataUser);
                                        }

                                        <input type="hidden" name="dataHorario" value="@dataUser" />
                                        <input type="submit" value="Editar" class="btn btn-success ">
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
