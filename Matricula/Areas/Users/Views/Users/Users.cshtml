@model DataPaginador<InputModelRegister>
@{
    ViewData["Title"] = "Users";
}

<h1>Usuarios</h1>
<div class="container p-4">
    <div class="form-group">
        <form asp-area="Users" asp-controller="Users" asp-action="Users" method="get">
            <div class="row">
                <div class="col-md-4">
                    <input type="text" id="filtrar" name="filtrar" placeholder="Buscar" class="form-control" />
                </div>
                <div class="col-md-4">
                    <input type="submit" value="Buscar" class="btn btn-success">
                </div>
            </div>
        </form>
    </div>
    <div class="form-group">
        <form action="" method="post">
            <div class="row">
                <div class="col-md-1">
                    <a class="btn btn-primary text-white" asp-area="Users" asp-page="/Account/Register">Add</a>
                </div>
            </div>
        </form>
    </div>
    <div class="row">
        @foreach (var item in Model.List)
        {
            <div class="col-xs-6 col-md-2">
                <div class="card text-center">
                    <div class="card-header ">
                        <a asp-route-id="@item.Identificacion" asp-area="Users" asp-page="/Account/Details">
                            <img class='imageUsers' src="~/lib/Image/no_avatar.png" />
                        </a>
                    </div>
                    <div class="card-body text-center">
                        <table class="tableCursos">
                            <tbody>
                                <tr>
                                    <td>
                                        <div class="text-center">
                                            <p> @Html.DisplayFor(modelItem => item.Nombre)</p>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="text-center">
                                            <p> @Html.DisplayFor(modelItem => item.PrimerApellido)</p>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="text-center">
                                            <p>Rol: @Html.DisplayFor(modelItem => item.Rol)</p>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <a asp-route-id="@item.Identificacion" asp-area="Users" asp-page="/Account/Details">
                                            <input type="submit" value="Detalle" class="btn btn-success ">
                                        </a>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>