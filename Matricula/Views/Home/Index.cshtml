@model InputModelLogin
@{
    ViewData["Title"] = "Liberty University";
}

<head>
    @*<link rel="stylesheet" href="~/css/home.css" />*@
</head>

<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Iniciar Sesion</h3>
                </div>
                <img src="~/lib/Image/liberty.png" class="mx-auto w-25">
                <div class="card-body">
                    <form asp-controller="Home" asp-action="Index" method="post">
                        <div class="form-group">
                            <input asp-for="CorreoElectronico" placeholder="Correo Electronico" class="form-control" autofocus />
                            <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" placeholder="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <span class="text-danger">
                                @Html.DisplayFor(m => m.ErrorMessage)
                            </span>
                        </div>
                        <button class="btn btn-primary btn-block">
                            Ingresar
                        </button><br />
                        <div class="form-group">
                            <a asp-area="Users" asp-page="/Account/Register">Nuevo Usuario</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}